<div id="global-cookie-message" class="dss-cookie-banner govuk-clearfix dss-cookie-banner--services" role="region" aria-label="cookie banner" data-nosnippet>
  <div id="dss-cookie-message" class="dss-cookie-banner__wrapper govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <div class="dss-cookie-banner__message">
          <h2 class="govuk-heading-m">Can we store analytics cookies on your device?</h2>
          <p class="govuk-body">Analytics cookies help us understand how our website is being used.</p>
        </div>
        <div class="dss-cookie-banner__buttons--flex">
          <button id="accept-cookies-btn" class="dss-button govuk-button dss-button--inline" type="submit">Yes</button>
          <button id="reject-cookies-btn" class="dss-button govuk-button dss-button--inline" type="submit">No</button>
          <!-- don't show the link to the cookies page if we are on the cookies page -->
          <%if current_page.url != url_for('cookies') %>
            <a class="dss-cookie-banner__link govuk-link" href="/cookies">How we use cookies</a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div id="dss-cookie-confirmation" class="dss-cookie-banner__confirmation govuk-width-container" tabindex="-1">
    <p class="dss-cookie-banner__confirmation-message" role="alert">
      Youâ€™ve accepted all cookies. You can <a class='govuk-link' href='/cookies'>change your cookie settings</a> at any time.
    </p>
    <button id="hide-confirmation-btn" class="dss-cookie-banner__hide-button">Hide</button>
  </div>
</div>
